
{
  "manifest_version": 3,
  "name": "Mentari v2.0",
  "version": "2.0",
  "description": "Optimalkan pengalaman belajar di MENTARI UNPAM! Dapatkan notifikasi forum real-time, bantuan AI untuk quiz, presensi otomatis, dan kuesioner instan. Belajar lebih efisien dan hemat waktu.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://mentari.unpam.ac.id/*"],
  "content_scripts": [
    {
      "matches": ["https://mentari.unpam.ac.id/*"],
      "exclude_matches": ["https://mentari.unpam.ac.id/login"],
      "js": ["apiKeyManager.js", "content.js", "gemini.js"]
    },
    {
      "matches": ["https://mentari.unpam.ac.id/*"],
      "js": ["home.js"]
    },
    {
      "matches": ["https://mentari.unpam.ac.id/u-courses/*/exam/*"],
      "js": ["quiz.js"]
    },
    {
      "matches": ["https://mentari.unpam.ac.id/u-courses/*/kuesioner/*"],
      "js": ["kuisioner.js"]
    },
    {
      "matches": ["https://mentari.unpam.ac.id/u-courses/*/forum/*/topics/*"],
      "js": ["discus.js"]
    },
    {
      "matches": [
        "https://mentari.unpam.ac.id/login"
      ],
      "js": ["pw.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["token.js", "apiKeyManager.js"],
      "matches": ["https://mentari.unpam.ac.id/*"],
      "exclude_matches": ["https://mentari.unpam.ac.id/login"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
